<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ghstudios.android.components.TitleBarCell
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:iconSrc="@drawable/drawer_armor"
            tools:labelText="Attack Jewel 3"/>

        <FrameLayout
            android:id="@+id/divider1"
            style="@style/HorizontalDivider"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/data_row"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_full_height"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            app:justifyContent="space_between"
            app:alignItems="center">

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/item_rarity"
                tools:valueText="6" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="Slots"
                tools:valueText="●●●" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/armor_defense"
                tools:valueText="5~50" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/armor_part"
                tools:valueText="Legs" />
        </com.google.android.flexbox.FlexboxLayout>

        <FrameLayout
            android:id="@+id/divider2"
            style="@style/HorizontalDivider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_large">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fire Res:"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Res:"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ice Res:"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunder Res:"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dragon Res:"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fire_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/water_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/ice_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/thunder_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/dragon_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </LinearLayout>

        <Button android:id="@+id/select_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/asb_action_select"
            android:visibility="gone"
            tools:visibility="visible"
            android:elevation="3dp"
            android:clickable="true"/>

    </LinearLayout>
</ScrollView>