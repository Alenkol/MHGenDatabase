<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listitem"
    style="@style/list_item_basic"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:clickable="false"

    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/margin_large"

    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium">
    <!-- Note: padding/margin above are separated as an implementation detail.
        The padding can be set to zero by code, the margin cannot.-->

    <LinearLayout
        android:id="@id/item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_img3"
            style="@style/main_image"
            tools:src="@drawable/drawer_items"/>

        <TextView
            android:id="@+id/item_text3"
            style="@style/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text="Potion" />
    </LinearLayout>

    <TextView
        android:id="@+id/yield_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item3"
        app:layout_constraintBottom_toBottomOf="@id/item3"
        app:layout_constraintEnd_toStartOf="@id/amt"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"

        android:text="@string/item_combination_yield"
        />

    <TextView
        android:id="@+id/amt"
        style="@style/text_small"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        app:layout_constraintBaseline_toBaselineOf="@id/yield_label"
        app:layout_constraintEnd_toStartOf="@id/percentage"
        tools:text="2" />

    <TextView
        android:id="@+id/percentage"
        style="@style/text_small"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/amt"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="95%" />


    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/item3"
        app:layout_constraintEnd_toEndOf="parent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_text1"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            tools:text="Dragonbone Artifact"/>

        <ImageView
            android:id="@+id/item_img1"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            tools:src="@drawable/drawer_items"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/item1"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item_text2"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            tools:text="Dragonbone Artifact" />

        <ImageView
            android:id="@+id/item_img2"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            tools:src="@drawable/drawer_items"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>