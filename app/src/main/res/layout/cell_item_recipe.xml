<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="vertical"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title"
        style="@style/text_small"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:textColor="@color/accent_color"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Craft"/>

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <com.ghstudios.android.components.IconLabelTextCell
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iconSrc="@drawable/drawer_decorations"
            app:labelText="Bloodrun Jewel"
            app:valueText="1"
            tools:visibility="visible"
            android:visibility="gone" />
        <com.ghstudios.android.components.IconLabelTextCell
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iconSrc="@drawable/drawer_items"
            app:labelText="Rath Medulla"
            app:valueText="1"
            tools:visibility="visible"
            android:visibility="gone" />
        <com.ghstudios.android.components.IconLabelTextCell
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iconSrc="@drawable/drawer_items"
            app:labelText="Mega Demondrug"
            app:valueText="2"
            tools:visibility="visible"
            android:visibility="gone" />
    </LinearLayout>
</merge>