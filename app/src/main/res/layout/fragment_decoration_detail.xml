<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ghstudios.android.components.TitleBarCell
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:iconSrc="@drawable/drawer_decorations"
            tools:labelText="Attack Jewel 3"/>

        <FrameLayout
            android:id="@+id/divider1"
            style="@style/HorizontalDivider"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/data_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:justifyContent="space_between">

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="Slots"
                tools:valueText="●●●" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/item_rarity"
                tools:valueText="6" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/item_buy"
                tools:valueText="80z" />

            <com.ghstudios.android.components.ColumnLabelTextCell
                android:id="@+id/sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelText="@string/item_sell"
                tools:valueText="80z" />
        </com.google.android.flexbox.FlexboxLayout>

        <FrameLayout
            android:id="@+id/divider2"
            style="@style/HorizontalDivider" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/skill_label"
            style="@style/text_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="Skills"
            android:textColor="@color/accent_color"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/skill_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ghstudios.android.components.IconLabelTextCell
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:labelText="Attack"
                app:valueText="1"
                tools:visibility="visible" />

            <com.ghstudios.android.components.IconLabelTextCell
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:labelText="Defense"
                app:valueText="-1"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ghstudios.android.components.ItemRecipeCell
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:titleText="Recipe 1"
                tools:visibility="visible" />

            <com.ghstudios.android.components.ItemRecipeCell
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:titleText="Recipe 2"
                tools:visibility="visible" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>