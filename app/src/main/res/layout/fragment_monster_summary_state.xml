<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Summary Section -->
    <com.ghstudios.android.components.SectionHeaderCell
        android:id="@+id/state_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:labelText="Normal State" />

    <!-- Weaknesses -->
    <LinearLayout
        android:id="@+id/weaknesses"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:minHeight="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_medium"
            android:layout_gravity="center_vertical"
            android:text="@string/monster_summary_weaknesses"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/weakness_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row_reverse">

            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

    <FrameLayout style="@style/HorizontalDividerFull"/>

    <!-- Traps and Bombs -->
    <RelativeLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:minHeight="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_medium"
            android:animateLayoutChanges="true"
            android:layout_gravity="center_vertical"
            android:text="@string/monster_summary_items"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/item_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row_reverse">

            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/small_icon"
                android:visibility="gone"
                tools:visibility="visible"/>
        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>


</LinearLayout>