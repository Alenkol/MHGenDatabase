<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/title_bar">
        <TextView
            android:id="@+id/detail_title_bar_text"
            tools:text="Title Bar Text"
            style="@style/title_bar_text" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_weapon_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="180"
                style="@style/detail_header_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Attack"
                style="@style/detail_subheader_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weapon_detail_element_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_weapon_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="28"
                style="@style/detail_header_text"/>
            <TextView
                android:id="@+id/detail_weapon_element_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Fire"
                style="@style/detail_subheader_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weapon_detail_element_layout_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_weapon_element_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="18"
                style="@style/detail_header_text"/>
            <TextView
                android:id="@+id/detail_weapon_element_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Poison"
                style="@style/detail_subheader_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_weapon_affinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="5%"
                style="@style/detail_header_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Affinity"
                style="@style/detail_subheader_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_weapon_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="---"
                style="@style/detail_header_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                tools:text="Slots"
                style="@style/detail_subheader_text"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/text_color_secondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <!--Sharpness-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Sharpness"/>
        <com.ghstudios.android.ui.general.DrawSharpness
            android:id="@+id/detail_weapon_blade_sharpness"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/detail_weapon_blade_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Notes"/>
        <LinearLayout
            android:id="@+id/detail_weapon_note_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_weapon_blade_note1"
                style="@style/small_image" />
            <ImageView
                android:id="@+id/detail_weapon_blade_note2"
                style="@style/small_image" />
            <ImageView
                android:id="@+id/detail_weapon_blade_note3"
                style="@style/small_image"/>
        </LinearLayout>
        <!--Special Value-->
        <TextView
            android:id="@+id/detail_weapon_blade_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Phial Type"/>
        <TextView
            android:id="@+id/detail_weapon_blade_special_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_value_text"
            tools:text="Element"/>
        <TextView
            android:id="@+id/detail_weapon_defense_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Defense"/>
        <TextView
            android:id="@+id/detail_weapon_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_value_text"
            tools:text="10"/>
        <!--Upgrade Cost-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Upgrade Cost"/>
        <TextView
            android:id="@+id/detail_weapon_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_value_text"
            tools:text="48000z"/>
        <!--Creation Cost-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Creation Cost"/>
        <TextView
            android:id="@+id/detail_weapon_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_value_text"
            tools:text="-"/>
        <!--Rarity-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Rarity"/>
        <TextView
            android:id="@+id/detail_weapon_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail_value_text"
            tools:text="5"/>
        <!--Description-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_small_secondary"
            android:layout_marginBottom="4dp"
            tools:text="Description"/>
        <TextView
            android:id="@+id/detail_weapon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_medium"
            android:textColor="@color/weapon_property_color"
            android:layout_marginBottom="8dp"
            tools:text="5"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>