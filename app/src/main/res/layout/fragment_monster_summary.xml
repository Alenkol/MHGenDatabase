<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Common header -->
        <com.ghstudios.android.components.TitleBarCell
            android:id="@+id/monster_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:iconSrc="@drawable/drawer_monsters"
            tools:titleText="Azure Rathalos"
            />

        <LinearLayout
            android:id="@+id/monster_state_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/fragment_monster_summary_state"
                android:visibility="gone"
                tools:visibility="visible"/>
            <include layout="@layout/fragment_monster_summary_state"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <View style="@style/HorizontalDividerFull"/>

        <!-- AILMENTS -->
        <RelativeLayout
            android:id="@+id/ailments"
            style="@style/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:minHeight="48dp">

            <TextView
                android:id="@+id/ailments_label"
                style="@style/text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ailments" />

            <LinearLayout
                android:id="@+id/ailments_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ailments_label"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blastblight"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Severe Dragonblight"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dragon Wind Pressure"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>

        <com.ghstudios.android.components.SectionHeaderCell
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/monster_habitats"/>

        <LinearLayout
            android:id="@+id/habitat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        
    </LinearLayout>
</ScrollView>